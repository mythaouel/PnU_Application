<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:background="@color/ink_04"
    android:layout_height="64dp">
<ImageView
    android:src="@drawable/ic_logo_slogan"
    android:layout_weight="1.2"
    android:layout_width="0dp"
    android:layout_height="30dp"/>
    <LinearLayout
        android:paddingLeft="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7.3"
        android:layout_width="0dp"
        android:layout_height="55dp">
        <TextView
            android:textColor="@color/primary_yellow"
            android:id="@+id/txtTitleCustom2"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtInfoCustom2"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:text="lorem lorem lorem lorem lorem lorem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtIimeCustom2"
        android:layout_weight="1.5"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:text="12:10p"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
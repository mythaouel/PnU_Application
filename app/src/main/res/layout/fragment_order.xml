<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ink_04"
    android:id="@+id/fragmentOrderContainer">

<com.google.android.material.appbar.AppBarLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/primary_yellow"
            app:titleTextColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/imvBack"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/back_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/order"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--        Khung thông tin cá nhân-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="8dp"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/locate"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:weightSum="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="5.5"
                            android:id="@+id/txtHoTen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/customer_name"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_weight="2.5"
                            android:id="@+id/txtSDT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/customer_tel"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7.5"
                            android:id="@+id/txtDiaChi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/customer_address"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

<!--        Khung sản phẩm-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:weightSum="10">
                    <TextView
                        android:layout_weight="4"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="@string/note_label"
                        android:textSize="14sp" />
                    <EditText
                        android:layout_weight="6"
                        android:hint="@string/note"
                        android:textSize="14sp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

<!--        Khung thông tin giao hàng-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="8dp"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/shipping_fast"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="8">
                        <TextView
                            android:layout_weight="6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/txtPhiShip1"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping_cost"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtNgayGiao"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_date"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

<!--        Khung phương thức thanh toán + tổng tiền-->
<!--        Phương thức thanh toán-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="8dp"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/money_check"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_method"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/COD"
                        android:textSize="14sp"/>

<!--                    Tiền tạm tính-->
                    <LinearLayout
                        android:weightSum="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">
                        <TextView
                            android:layout_weight="4.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/total_1"
                            android:textSize="13sp"/>
                        <TextView
                            android:layout_weight="2.5"
                            android:id="@+id/txtTienTamTinh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/total_price_1"
                            android:gravity="end"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

<!--                    phí giao hàng-->
                    <LinearLayout
                        android:weightSum="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">
                        <TextView
                            android:layout_weight="4.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping_label"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/txtPhiShip2"
                            android:layout_weight="2.5"
                            android:gravity="end"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping_cost"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

<!--                    Tổng tiền-->
                    <LinearLayout
                        android:weightSum="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp">
                        <TextView
                            android:layout_weight="4.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/total_2"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_weight="2.5"
                            android:id="@+id/txtTongTien"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/total_price_2"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2.5dp"
                android:text="@string/dong_y_dieu_khoan"/>
        </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--    Khung tổng cộng-->
    <androidx.cardview.widget.CardView
        android:id="@+id/khungTongCong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/ink_03">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <!--Khung tổng cộng-->
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="17sp"
                    android:text="@string/total"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_weight="6"
                    android:id="@+id/txtGiaTongCong"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp"
                    android:gravity="end|center_vertical"
                    android:text="@string/total_price"
                    android:textColor="@color/price_tag"/>
            </LinearLayout>

            <!--Nút đặt hàng-->
            <Button
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_corners_order_btn"
                android:id="@+id/btnDatHang2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/dat_hang"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:backgroundTint="@color/price_tag"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.fragment.AboutUsFragment">
    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/primary_yellow"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT US"/>
            <TextView
                android:text="Tầm nhìn"
                android:textSize="25sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="PnU sẽ là người bạn đồng hành thân thiết của thú cưng và những người yêu thú cưng. Chúng tôi mong muốn cung cấp những sản phẩm tốt nhất cho thú cưng của bạn."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Sứ mệnh"
                android:textSize="25sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="PnU ra đời để có thể gắn kết mọi người, đem đến những sản phẩm tiện ích, tốt nhất cho thú cưng của bạn, đáp ứng mọi nhu cầu của thú cưng, giá cả bình ổn, hợp lý nhất thị trường."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Mục tiêu"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="-Cung cấp các sản phẩm từ A-Z cho thú cưng yêu quý của bạn."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="- Chúng tôi hiện kinh doanh các mặt hàng sau:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="+ Thức ăn cho chó, mèo:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="+ Thời trang theo trend cho thú cưng:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="+ Cát mèo và các sản phẩm vệ sinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="+ Trang sức, đồ trang trí từ đáng yêu đến cool ngầu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:textColor="@color/ink_01"
                android:textSize="20sp"
                android:text="+ Đồ chơi, đồ cào móng, giải tỏa stress các loại cho thú cưng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/primary_yellow"
                android:text="Giao hàng toàn quốc. Miễn phí vận chuyển cho đơn hàng từ 500.000đ."
                android:textSize="25sp"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
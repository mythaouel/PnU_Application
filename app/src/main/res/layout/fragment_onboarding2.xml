<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fragment.OnboardingFragment2"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/onboard2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Mua hàng nhanh chóng, tiện lợi"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PnU cung cấp đa dạng các sản phẩm dành cho chó mèo với đội ngũ nhân viên chuyên nghiệp, giao hàng nhanh chóng cam kết sẽ đem lại cho bạn những trải nghiệm tuyệt vời."
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:weightSum="10"
    android:padding="5dp">
        <ImageView
            android:layout_weight="3.5"
            android:layout_gravity="center_vertical"
            android:id="@+id/imvCartThumb"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:src="@drawable/product_1"/>
        <LinearLayout
            android:layout_weight="6.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/txtCartName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Hạt thức ăn cho chó Royal Canin Poodle Puppy"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/txtCartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="394000đ"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/price_tag"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/yellow_04">
                                        <ImageView
                                            android:id="@+id/imvMinus"
                                            android:layout_width="26dp"
                                            android:layout_height="26dp"
                                            android:src="@drawable/ic_minus_box"/>
                                        <TextView
                                            android:id="@+id/txtCartQuantity"
                                            android:gravity="center"
                                            android:layout_width="25dp"
                                            android:layout_height="26dp"
                                            android:layout_marginLeft="3dp"
                                            android:layout_marginRight="3dp"
                                            android:text="10"
                                            android:textSize="15sp" />
                                        <ImageView
                                            android:id="@+id/imvPlus"
                                            android:layout_width="26dp"
                                            android:layout_height="26dp"
                                            android:src="@drawable/ic_add_box"/>
                                </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/imvDelete"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_delete"/>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ink_03"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/actToolbar"
        android:background="@drawable/act_custom_bg_updateinf"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:background="@android:color/transparent"
            android:id="@+id/imvOrderDetailBack"
            app:srcCompat="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Chi tiết đơn hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </Toolbar>
    <LinearLayout
        android:weightSum="3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            android:outlineSpotShadowColor="@color/black"
            app:cardElevation="10dp"
            android:layout_weight="2.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtOrderDetailId"
                    android:layout_marginBottom="15dp"
                    android:text="Order 789"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:src="@drawable/act_ic_order_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtOrderDetailDate"
                        android:textColor="@color/ink_01"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="28 Thang 10 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="35dp"
                        android:text="6:30 pm"
                        android:textSize="15sp"
                        android:textColor="@color/price_tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <CheckBox
                        android:layout_marginRight="15dp"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="2.3"
                        android:src="@drawable/act_package"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="7.6"
                        android:textColor="@color/ink_01"
                        android:layout_marginLeft="25dp"
                        android:textSize="18sp"
                        android:text="Đang đóng gói..."
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/act_ic_order_detail2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/ink_01"
                        android:textSize="18sp"
                        android:text="Đang vận chuyển..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <CheckBox
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:src="@drawable/act_packaged"
                        android:layout_weight="2.3"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="7.6"
                        android:textColor="@color/ink_01"
                        android:layout_marginLeft="25dp"
                        android:textSize="18sp"
                        android:text="Đã nhận hàng..."
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
    </LinearLayout>


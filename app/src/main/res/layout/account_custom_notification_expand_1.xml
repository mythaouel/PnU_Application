<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:gravity="center_vertical"
    android:background="@color/ink_04"
    android:layout_height="240dp">
    <LinearLayout
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:padding="2dp"
            android:src="@drawable/ic_logo_slogan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/red"
            android:paddingRight="5dp"
            android:layout_weight="9"
            android:id="@+id/txtTitleCustomExpand1"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/txtInfoCustomExpand1"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:text="lorem lorem lorem lorem lorem lorem lorem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_weight="7.5"
        android:id="@+id/imvCustomExpand1"
        android:src="@drawable/event1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>